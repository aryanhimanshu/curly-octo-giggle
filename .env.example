# Maximum number of concurrent requests per process
MAX_CONCURRENT_REQUESTS=10

# Delay between requests to the same domain (in seconds)
CRAWL_DELAY=1.0

# Maximum crawl depth
MAX_DEPTH=3

# Request timeout in seconds
TIMEOUT=30

# Maximum number of retries for failed requests
MAX_RETRIES=3

# Initial delay between retries (will be exponentially increased)
RETRY_DELAY=2.0

# Number of parallel processes (defaults to CPU count if not set)
MAX_PROCESSES=4 